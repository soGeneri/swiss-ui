{
  "name": "@swiss-ui/react",
  "version": "0.1.0",
  "description": "Swiss International Style React component library",
  "author": "Resume Matcher",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles": "./dist/swiss.css",
    "./tailwind-preset": {
      "import": {
        "types": "./dist/tailwind-preset.d.ts",
        "default": "./dist/tailwind-preset.js"
      },
      "require": {
        "types": "./dist/tailwind-preset.d.cts",
        "default": "./dist/tailwind-preset.cjs"
      }
    },
    "./rich-text": {
      "import": {
        "types": "./dist/rich-text.d.ts",
        "default": "./dist/rich-text.js"
      },
      "require": {
        "types": "./dist/rich-text.d.cts",
        "default": "./dist/rich-text.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsup && npm run copy-css",
    "copy-css": "node -e \"require('fs').copyFileSync('src/styles/swiss.css', 'dist/swiss.css')\"",
    "build:storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@tiptap/react": {
      "optional": true
    },
    "@tiptap/starter-kit": {
      "optional": true
    },
    "@tiptap/extension-link": {
      "optional": true
    },
    "@tiptap/extension-underline": {
      "optional": true
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "lucide-react": "^0.468.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@tiptap/extension-link": "^2.10.4",
    "@tiptap/extension-underline": "^2.10.4",
    "@tiptap/react": "^2.10.4",
    "@tiptap/starter-kit": "^2.10.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.16.0",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "storybook": "^8.4.7",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "swiss",
    "international-style",
    "design-system",
    "tailwindcss"
  ]
}
